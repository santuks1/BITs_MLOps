# Environment Variables Template
# Copy to .env and update values

# Python
PYTHONUNBUFFERED=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=heart-disease-experiments

# Model Configuration
MODEL_PATH=models/random_forest.pkl
PREPROCESSING_PIPELINE_PATH=models/preprocessing_pipeline.pkl

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database (if applicable)
DATABASE_URL=sqlite:///mlops.db

# Docker
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=your_username
DOCKER_TOKEN=your_token

# Kubernetes
K8S_NAMESPACE=default
K8S_DEPLOYMENT_NAME=heart-disease-api

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_PASSWORD=admin

# Deployment
DEPLOYMENT_ENV=development  # development, staging, production